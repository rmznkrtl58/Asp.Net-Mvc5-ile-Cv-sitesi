@using MvcCvMiniProje.Models.entities
@model MvcCvMiniProje.Models.entities.tbl_deneyimlerim
@{

    ViewBag.Title = "dgetir";
    Layout = "~/Views/Shared/_adminlayout.cshtml";
}
<br />
<form class="form-group" method="post">
    @Html.HiddenFor(m => m.Id)
    <div>
        @Html.Label("Başlık:")
        @Html.TextBoxFor(m => m.Başlık,new  {@class="form-control" })
    </div>
    <div style="margin-top:7px">
        @Html.Label("Alt Başlık:")
        @Html.TextBoxFor(m => m.AltBaşlık, new { @class = "form-control" })
    </div>
    <div style="margin-top:7px">
        @Html.Label("Açıklama:")
        @Html.TextAreaFor(m => m.Acıklama, new { @class = "form-control",@style="height:100px" })
    </div>
    <div style="margin-top:7px">
        @Html.Label("Tarih:")
        @Html.TextBoxFor(m => m.Tarih, new { @class = "form-control" })
    </div>
    <div style="margin-top:7px">
        <button class="btn btn-primary">Güncelle</button>
    </div>
</form>

